generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @default(autoincrement()) @id
  email String @unique
  password String

  pet Pet[]
  order Order[]

  @@map("user")
}

model Pet {
  id Int @default(autoincrement()) @id
  name String
  animal String
  breed String
  user User @relation(fields: [userId],references: [id] )
  userId Int

  @@map("pet")
  
}

model Food {
  id Int @default(autoincrement()) @id
  name String
  price String
  weight Int
  forWhom Int

  oderItem OrderItem[]

  @@map("food")
}

model Order {
  id Int @default(autoincrement()) @id
  user User @relation(fields: [userId],references: [id] )
  userId Int
  date DateTime
  rating String

orderItem OrderItem[]
  @@map("order")
}

model OrderItem {
  id Int @default(autoincrement()) @id
  order Order @relation(fields: [orderId], references: [id])
  orderId Int
  food Food @relation(fields: [foodId], references: [id])
  foodId Int

  @@map("orderItem")
}